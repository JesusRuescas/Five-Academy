package br.com.alura.algoritmos;

public class TestaSalarios {

	public static void main(String[] args) {
		
		Salarios salario[] = { 
                new Salarios ("Lamborghini", 1000000),
                new Salarios("Jipe", 46000),
                new Salarios("Brasília", 16000),
                new Salarios("Smart", 46000),
                new Salarios("Fusca", 17000)
        };

        int maisBarato = buscaMenor(salario);
        System.out.println(maisBarato);
        System.out.println("O carro " + salario[maisBarato].getNome()
                                      + " é o mais barato, e custa "
                                      + salario[maisBarato].getSalario());

    }

	  private static int buscaMenor(Salarios[] salario) {
	       int maisBarato = 0;
	       for(int atual = 0; atual <= 4; atual++) {
	           if(salario[atual].getSalario() < salario[maisBarato].getSalario()) {
	               maisBarato = atual;
	           }
	        }
	       return maisBarato;

	}

}
